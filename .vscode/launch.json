{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django SSL Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\backend\\manage.py",
            "args": [
                "runsslserver",
                "--certificate",
                "cert.pem",
                "--key",
                "key.pem",
                "127.0.0.1:8000"  // Adres i port serwera HTTPS
            ],
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "DJANGO_DEBUG": "true"
            }
        }
    ]
}

